@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gestion Biblioteca</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


</head>
<body>
    <div class="container px-0 shadow">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">
                <h3 class="text-success">Biblioteca</h3>
            </a>
            <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse"
                    data-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavId">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active">Alquilar</a>
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="collapsibleNavId">
                <ul class="navbar-nav  mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" >Comprar</a>
                    </li>
                </ul>
            </div>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Buscador" name="buscador">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
            </form>
        </nav>
        <!-- Person -->
        <div class="row justify-content-center px-3">
            <div class="col-md-6 col-lg-4 p-3">
                <div class="card h-100">
                    <img class="card-img-top img-fluid" src="~/Imagenes/descarga.jpg"  alt="">
                    <div class="text-center">
                        <h3>Titulo del libro</h3>
                    </div>
                    <div class="text-center">
                        <h5>Editorial del libro</h5>
                    </div>
                    <div class="card-footer text-center ">
                        <button class="btn btn-success btn-block " data-toggle="modal" data-target="">Alquilar</button>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-success btn-block " data-toggle="modal" data-target="">Comprar</button>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <h2 class="text-center bg-dark text-success py-3">Gestion Biblioteca Ivan Juarez - Adentia</h2>
        </footer>
    </div>
</body>
</html>
